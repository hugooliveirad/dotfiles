[init]
    defaultBranch = main

[github]
    user = hugobessaa

[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    filemode = false
    trustctime = false

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[grep]
    lineNumber = true

[help]
    autocorrect = 1

[difftool]
    prompt = false

[mergetool]
    prompt = false

[pull]
    rebase = true

[push]
    default = current

[fetch]
  prune = true

[diff]
    renames = copies

[merge]
    conflictstyle = diff3
    defaultToUpstream = true

[branch]
    autosetuprebase = always

[rebase]
    autosquash = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[commit]
    gpgsign = true
