#!/bin/sh

DOTFILES_DIR=$(dirname $( cd $(dirname $0) ; pwd -P ))

# install brew
which -s brew
if [[ $? != 0 ]] ; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> ~/.bash_profile
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi


# install basic tools
brew update
brew upgrade
brew install tmux git python python3 the_silver_searcher vim nvim
brew cask install rectangle iterm2 spotify cleanshot alfred transmission alacritty homebrew/cask-versions/firefox-developer-edition
brew cask install homebrew/cask-drivers/elgato-control-center homebrew/cask-drivers/elgato-stream-deck homebrew/cask-drivers/elgato-game-capture-hd

# install nvm
if [ ! -d ~/.nvm ]; then
  curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.3/install.sh | bash
fi

# install plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# install nvim plug
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

# install plugs
vim +:PlugInstall +:qa
nvim +:PlugInstall +:qa

# install rust
if [ ! hash rustc 2>/dev/null ]; then
  curl https://sh.rustup.rs -sSf | sh
fi

# Install tpm
if [ ! -d ~/.tmux/plugins/tpm ]; then
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
fi

# Install pip
sudo easy_install pip

# Install git prompt
if [ ! -d ~/.bash-git-prompt ]; then
  git clone https://github.com/magicmonty/bash-git-prompt.git ~/.bash-git-prompt --depth=1
fi

# Repeat keys please
defaults write -g ApplePressAndHoldEnabled -bool false
